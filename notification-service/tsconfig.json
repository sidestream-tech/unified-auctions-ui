{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "dist",
    "composite": true,
    "incremental": true,
    "target": "es2017",
    "moduleResolution": "node",
    "module": "esnext",
    "declaration": true,
    "declarationMap": true,
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "traceResolution": false,
    "listEmittedFiles": true,
    "listFiles": false,
    "pretty": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "src/**/*"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules"
  ],
  "references": []
}
